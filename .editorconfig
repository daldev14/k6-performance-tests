root = true

[*.js]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
max_line_length = 100

[*.test.js]
indent_size = 2
max_line_length = 120
insert_final_newline = true

[lib/**.js]
indent_size = 2

[k6-tests/**.js]
indent_size = 2

[*.json]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

[*.md]
trim_trailing_whitespace = false
insert_final_newline = true
